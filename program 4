<html>
    <head>
        <title>sorting</title>
        <script language="javascript">
            function ndesc()
            {
                var num=document.forms["frm1"].num.value;
                var nums=num.split(',');
                var asc_sort=nums.sort(function(a,b){return (a-b)});
                var reversed_sort=asc_sort.reverse();
                document.forms["frm1"].desc.value=reversed_sort;
            }
        </script>
    </head>
    <body>
        <form name="frm1">
            <center>
                <h1>Number in descending order</h1>
            </center>
                Enter numbers separated by comas:<input type="text" name="num"></input>
                <br><br>
                <input type="button" name="inwords" value="indescending order" onclick="ndesc()"></input>
                <br><br>
                Number in descending order
                <input type="text" name="desc" ></input>
        </form>
    </body>
</html>
